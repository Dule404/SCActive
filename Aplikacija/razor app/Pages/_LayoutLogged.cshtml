    var culture = CultureInfo.CurrentCulture;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <title>SC Active</title>
    <link rel="icon" href="Resources/logo.png" type="image/png">
